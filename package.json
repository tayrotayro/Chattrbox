    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.7.7",
        "@babel/preset-env": "^7.7.7",
        "babelify": "^10.0.0",
        "browserify": "^16.5.0",
        "crypto-js": "^3.1.9-1",
        "jquery": "^3.4.1",
        "moment": "^2.29.2",
        "nodemon": "^2.0.2",
        "watchify": "^3.11.1",
        "wscat": "^4.0.0"
    },
    "dependencies": {
        "ws": "^7.2.1"
    }
